{
    "name": "drupal/simplytest",
    "description": "Launch and management of simplytest.me service.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/simplytest",
    "support": {
        "issues": "https://www.drupal.org/project/issues/simplytest",
        "source": "https://git.drupalcode.org/project/simplytest"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "authors": [
        {
            "name": "Adam Bergstein (nerdstein)",
            "email": "nerdstein@gmail.com",
            "homepage": "https://www.drupal.org/u/nerdstein",
            "role": "Maintainer"
        },
        {
            "name": "Contributors",
            "homepage": "https://www.drupal.org/node/1786208/committers",
            "role": "Contributors"
        }
    ],
    "require": {
        "php": "^7.4",
        "amazeeio/drupal_integrations": "^0.3.4",
        "composer/installers": "^1.9",
        "composer/semver": "^3.0",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_toolbar": "^2.4",
        "drupal/core-composer-scaffold": "^9.1",
        "drupal/core-project-message": "^9.1",
        "drupal/core-recommended": "^9.1",
        "drupal/core": "^9.3",
        "drupal/fastly": "^4.0",
        "drupal/http_cache_control": "^2.0",
        "drupal/lagoon_logs": "^2.0",
        "drupal/purge": "^3.0",
        "drupal/tugboat": "^1.0@alpha",
        "drush/drush": "^10.3",
        "php-http/guzzle6-adapter": "^2.0"
    },
    "require-dev": {
        "drupal/core-dev-pinned": "^9.1"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "platform": {
            "php": "7.4"
        },
        "apcu-autoloader": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "tests": "php vendor/bin/phpunit web/modules/custom",
        "compile": "cd web/themes/simplytest_theme && npm run build"
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patches": {
            "drupal/tugboat": {
                "Tugboat domain #3280693": "https://git.drupalcode.org/project/tugboat/-/merge_requests/4.diff"
            }
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/sites/development.services.yml": false
            },
            "allowed-packages": [
                "amazeeio/drupal_integrations"
            ]
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "drupal-core-project-message": {
            "include-keys": [
                "homepage",
                "support"
            ],
            "post-create-project-cmd-message": [
                "<bg=blue;fg=white>                                                         </>",
                "<bg=blue;fg=white>  Congratulations, youâ€™ve installed the Drupal codebase  </>",
                "<bg=blue;fg=white>  from the drupal/recommended-project template!          </>",
                "<bg=blue;fg=white>                                                         </>",
                "",
                "<bg=yellow;fg=black>Next steps</>:",
                "  * Install the site: https://www.drupal.org/docs/8/install",
                "  * Read the user guide: https://www.drupal.org/docs/user_guide/en/index.html",
                "  * Get support: https://www.drupal.org/support",
                "  * Get involved with the Drupal community:",
                "      https://www.drupal.org/getting-involved",
                "  * Remove the plugin that prints this message:",
                "      composer remove drupal/core-project-message"
            ]
        },
        "violinist": {
            "one_pull_request_per_package": 1,
            "run_scripts": 0,
            "bundled_packages": {
                "drupal/core-recommended": [
                    "drupal/core-composer-scaffold",
                    "drupal/core-project-message",
                    "drupal/core-dev-pinned",
                    "drupal/core-dev",
                    "drupal/core"
                ]
            },
            "blacklist": [
                "drupal/core-composer-scaffold",
                "drupal/core-project-message",
                "drupal/core-dev-pinned",
                "drupal/core-dev",
                "drupal/core"
            ]
        }
    }
}
